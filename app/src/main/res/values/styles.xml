<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OutlinedInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_generic</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ButtonSmall" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_edit</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextViewPrice" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/price_tag</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="TextViewLight" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/textPrimary</item>
    </style>


    <style name="TextViewDark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
